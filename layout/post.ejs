<%- partial('partial/header') %>

<div class="post">
  <h1 class="post-title"><%= page.title %></h1>
  <div class="post-meta">
    <span><%= page.date.format('YYYY-MM-DD') %></span>
    <% if (page.author) { %>
    <span> | <%= page.author %></span>
    <% } %>
  </div>
  <div class="post-content"><%- page.content %></div>
</div>

<%- partial('partial/footer') %>
