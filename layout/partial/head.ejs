<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <% const title = page.title || __('website.activeTitle') || config.title; %>
  <title><%= title %></title>
  <% if (theme.favicon) { %>
  <link rel="icon" href="<%= url_for(theme.favicon) %>" type="image/x-icon" />
  <% } %>
  <link
    rel="preload"
    href="<%= url_for('/css/fonts/LXGWWenKaiLite-Regular.ttf') %>"
    as="font"
    type="font/ttf"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="<%= url_for('/css/theme.css') %>" />
  <link rel="stylesheet" href="<%= url_for('/css/style.css') %>" />
  <script src="<%= url_for('/js/main.js') %>"></script>
</head>
<script>
  var pageTitle = '<%= title %>';
  var activeTitle = '<%= __("website.activeTitle") %>';
  var inactiveTitle = '<%= __("website.inactiveTitle") %>';
  document.addEventListener('DOMContentLoaded', function () {
    let lastScrollTop = 0;

    // éšè—å¯¼èˆªæ 
    function hideHeader() {
      var dom = document.getElementById('header');
      if (dom) {
        dom.style.top = '-80px';
      }
    }

    // æ˜¾ç¤ºå¯¼èˆªæ 
    function showHeader() {
      var dom = document.getElementById('header');
      if (dom) {
        dom.style.top = '0';
      }
    }

    // æ£€æµ‹è®¾å¤‡ç±»å‹
    const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);

    if (isMobile) {
      // ç§»åŠ¨è®¾å¤‡è§¦æ‘¸äº‹ä»¶ç›‘å¬å™¨
      let touchStartY = 0;
      let touchEndY = 0;

      window.addEventListener('touchstart', function (event) {
        touchStartY = event.touches[0].clientY;
      });

      window.addEventListener('touchmove', function (event) {
        touchEndY = event.touches[0].clientY;
      });

      window.addEventListener('touchend', function () {
        if (touchStartY > touchEndY) {
          hideHeader();
        } else {
          showHeader();
        }
      });
    } else {
      // æ¡Œé¢è®¾å¤‡æ»šåŠ¨äº‹ä»¶ç›‘å¬å™¨
      window.addEventListener('scroll', function () {
        let scrollTop = window.scrollY || document.documentElement.scrollTop;

        if (scrollTop > lastScrollTop) {
          hideHeader();
        } else {
          showHeader();
        }
        lastScrollTop = scrollTop;
      });
    }

    // æ·»åŠ  menu-item ç‚¹å‡»äº‹ä»¶ç›‘å¬å™¨
    document.querySelectorAll('.menu-item').forEach(function (item) {
      item.addEventListener('click', function () {
        const url = item.getAttribute('data-url');
        if (url && url != window.location.pathname) {
          window.location.pathname = url;
        }
      });
    });
  });
  document.addEventListener('visibilitychange', function () {
    if (document.hidden) {
      document.title = inactiveTitle || 'ğŸ‘‹ğŸ» æˆ‘åœ¨è¿™é‡Œï¼';
    } else {
      document.title = pageTitle || activeTitle || 'ğŸ‰ æ¬¢è¿å›æ¥ï¼';
    }
  });
</script>
